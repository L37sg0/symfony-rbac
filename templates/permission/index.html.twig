{% extends 'base.html.twig' %}

{% block title %}Permissions{% endblock %}

{% block templateActions %}
    <a type="button"
       class="btn btn-sm btn-outline-secondary"
       href="{{ path('app_permission_new') }}">Create new</a>
{% endblock %}

{% block body %}

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Slug</th>
                    <th scope="col">Description</th>
                    <th scope="col">Active</th>
                    <th scope="col">Content</th>
                    <th scope="col">actions</th>
                </tr>
            </thead>
            <tbody>
            {% for permission in permissions %}
                <tr>
                    <td>{{ permission.id }}</td>
                    <td>{{ permission.title }}</td>
                    <td>{{ permission.slug }}</td>
                    <td>{{ permission.description }}</td>
                    <td>{{ permission.active }}</td>
                    <td>{{ permission.content }}</td>
                    <td>
                        <a href="{{ path('app_permission_show', {'id': permission.id}) }}">show</a>
                        <a href="{{ path('app_permission_edit', {'id': permission.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
