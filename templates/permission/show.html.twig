{% extends 'base.html.twig' %}

{% block title %}Permission{% endblock %}

{% block templateActions %}
    <a type="button"
       class="btn btn-sm btn-outline-secondary"
       href="{{ path('app_permission_index') }}">back to list</a>
    <a type="button"
       class="btn btn-sm btn-outline-secondary"
       href="{{ path('app_permission_edit', {'id': permission.id}) }}">edit</a>
{% endblock %}

{% block body %}

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ permission.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ permission.title }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ permission.slug }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ permission.description }}</td>
                </tr>
                <tr>
                    <th>Active</th>
                    <td>{{ permission.active }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ permission.content }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    {{ include('permission/_delete_form.html.twig') }}

{% endblock %}
