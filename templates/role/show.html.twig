{% extends 'base.html.twig' %}

{% block title %}Role{% endblock %}

{% block templateActions %}
    <a type="button"
       class="btn btn-sm btn-outline-secondary"
       href="{{ path('app_role_index') }}">back to list</a>
    <a type="button"
       class="btn btn-sm btn-outline-secondary"
       href="{{ path('app_role_edit', {'id': role.id}) }}">edit</a>
{% endblock %}

{% block body %}

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ role.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ role.title }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ role.slug }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ role.description }}</td>
                </tr>
                <tr>
                    <th>Active</th>
                    <td>{{ role.active }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ role.content }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    {{ include('role/_delete_form.html.twig') }}

{% endblock %}
