{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block templateActions %}
    <a type="button"
       class="btn btn-sm btn-outline-secondary"
       href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}

{% block body %}

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">First_name</th>
                    <th scope="col">Last_name</th>
                    <th scope="col">Username</th>
                    <th scope="col">Mobile</th>
                    <th scope="col">Email</th>
                    <th scope="col">Password</th>
                    <th scope="col">Remember_token</th>
                    <th scope="col">Registered_at</th>
                    <th scope="col">Email_verified_at</th>
                    <th scope="col">Last_login</th>
                    <th scope="col">Intro</th>
                    <th scope="col">Profile</th>
                    <th scope="col">actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.mobile }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.password }}</td>
                    <td>{{ user.rememberToken }}</td>
                    <td>{{ user.registeredAt ? user.registeredAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ user.emailVerifiedAt ? user.emailVerifiedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ user.intro }}</td>
                    <td>{{ user.profile }}</td>
                    <td>
                        <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="14">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
