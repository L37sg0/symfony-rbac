{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block templateActions %}
    <a type="button"
       class="btn btn-sm btn-outline-secondary"
       href="{{ path('app_user_index') }}">back to list</a>
    <a type="button"
       class="btn btn-sm btn-outline-secondary"
       href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
{% endblock %}

{% block body %}

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>First_name</th>
                    <td>{{ user.firstName }}</td>
                </tr>
                <tr>
                    <th>Last_name</th>
                    <td>{{ user.lastName }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Mobile</th>
                    <td>{{ user.mobile }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>Remember_token</th>
                    <td>{{ user.rememberToken }}</td>
                </tr>
                <tr>
                    <th>Registered_at</th>
                    <td>{{ user.registeredAt ? user.registeredAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Email_verified_at</th>
                    <td>{{ user.emailVerifiedAt ? user.emailVerifiedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Last_login</th>
                    <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Intro</th>
                    <td>{{ user.intro }}</td>
                </tr>
                <tr>
                    <th>Profile</th>
                    <td>{{ user.profile }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    {{ include('user/_delete_form.html.twig') }}

{% endblock %}
